pipeline {
    agent any

    environment {
        IMAGE_NAME = "aggregator-test-image"
        SERVICE_DIR = "services/fetch_news_crypto/aggregator"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                dir("${SERVICE_DIR}") {
                    script {
                        echo "Building Docker image for aggregator tests..."
                        sh "docker build -t ${IMAGE_NAME} ."
                    }
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo "Running pytest inside Docker container..."
                    sh """
                        docker run --rm ${IMAGE_NAME}
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up any dangling images..."
            sh "docker image prune -f"
        }
    }
}
